{
    "arrowParens": "always",
    "jsxSingleQuote": false,
    "overrides": [
        {
            "files": ["package*.json"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "singleQuote": false
            }
        }
    ],
    "plugins": ["prettier-plugin-organize-imports"],
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false
}
