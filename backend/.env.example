# Example environment variables for backend
# Copy this file to .env and fill in real values. Do NOT commit secrets.
CLIENT_URL=*
EPD_URL=http://localhost:3001
MAIL_URL=http://localhost:3002

# Auth0 configuration
# Set AUTH0_DOMAIN to the Auth0 tenant domain (without https://)
# Example: diabeticum-pedis.eu.auth0.com
AUTH0_DOMAIN=your.domain.auth0.com

# API audience for Auth0 (use the exact audience configured in Auth0)
AUTH0_API_AUDIENCE=https://your.api.audience

# Machine-to-machine client credentials
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret


